<Page x:Class="Practica5.Buy"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practica5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Buy">

    <Grid Background="#e3e1e3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label x:Name="PriceBox" Height="50" Width="110"/>

        <TextBox x:Name="PriceCt" Grid.Column="1" Grid.ColumnSpan="3" Height="50"/>
        <Button x:Name="CountBtn" Grid.Column="2" Grid.Row="1"
                Background="#f03d33" Foreground="#fbf9fb" Content="Count Price" Click="CountBtn_Click"/>
        <Button x:Name="BuyBtn" Grid.Column="2" Grid.Row="2"
                Background="#f03d33" Foreground="#fbf9fb" Content="Buy" Click="BuyBtn_Click"/>
    </Grid>
</Page>
